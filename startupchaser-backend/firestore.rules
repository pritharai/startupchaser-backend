rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }
    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    match /users/{userId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(request.resource.id);
      allow update, delete: if isOwner(userId);
    }

    match /{document=**} {
      allow read: if true; // TODO: tighten for private data
      allow write: if false; // Writes only via Cloud Functions/Admin
    }
  }
}